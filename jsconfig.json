{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@tests/*": ["./tests/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@models/*": ["./src/models/*"],
            "@validations/*": ["./src/validations/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@routes/*": ["./src/routes/*"]
        }
    },
    "exclude": ["node_modules"]
}
